<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itemview="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.user.ui.viewmodel.SettinglViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_background"
        android:orientation="vertical">

        <com.goldze.base.widget.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.goldze.base.widget.ItemView
            android:id="@+id/itemview_user_face"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:text="服务协议和隐私政策"
            itemview:item_right_visible="true"
            itemview:item_right_img_res="@mipmap/arrow_right"/>

        <com.goldze.base.widget.ItemView
            itemview:item_right_visible="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:text="产品介绍"
            itemview:item_right_img_res="@mipmap/arrow_right"/>

        <com.goldze.base.widget.ItemView
            itemview:item_right_visible="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:text="公司介绍"
            itemview:item_right_img_res="@mipmap/arrow_right"/>

        <com.goldze.base.widget.ItemView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:text="清理缓存"
            itemview:item_right_img_res="@mipmap/arrow_right"/>

        <com.goldze.base.widget.ItemView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:text="版本号"
            itemview:item_right_img_res="@mipmap/arrow_right"/>

        <TextView
            android:textColor="@color/appColor"
            android:background="@color/white"
            android:textSize="16dp"
            android:gravity="center"
            android:text="退出登录"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>
</layout>
